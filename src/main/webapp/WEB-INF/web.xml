<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AddMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.AddMealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UpdateMealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.DeleteMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMealServlet</servlet-name>
        <url-pattern>/deleteMeal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMealServlet</servlet-name>
        <url-pattern>/updateMeal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMealServlet</servlet-name>
        <url-pattern>/addMeal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

</web-app>
